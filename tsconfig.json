{
  "compilerOptions": {
    "allowJs": false,
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "skipLibCheck": true,
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
    "./src/**/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./lib/*",
    "./lib/**/*",
    "./lib/**/**/*",
    "./lib/**/**/**/*"
  ],
}
